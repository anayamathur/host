#!/bin/bash
set -e

echo "Configuring raj-host APT repository..."

# Add the raj-host repository
echo 'deb [trusted=yes] https://anayamathur.github.io/host/debian stable main' > /etc/apt/sources.list.d/raj-host.list

# Update package lists
echo "Updating package lists..."
apt-get update -qq 2>/dev/null || true

echo ""
echo "âœ“ raj-host repository configured successfully!"
echo ""
echo "You can now install raj-host with:"
echo "  sudo apt install raj-host"
echo ""

exit 0
